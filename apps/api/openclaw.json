{
  "gateway": {
    "bind": "loopback",
    "http": {
      "endpoints": {
        "responses": { "enabled": true }
      }
    }
  },
  "agents": {
    "defaults": {
      "thinkingDefault": "low"
    }
  },
  "plugins": {
    "load": {
      "paths": ["./openclaw-plugins/fine-tools", "./openclaw-plugins/fine-persistence", "./openclaw-plugins/pipedream-connect"]
    },
    "entries": {
      "fine-tools": {
        "enabled": true,
        "config": {
          "backendUrl": "http://localhost:3001"
        }
      },
      "fine-persistence": {
        "enabled": true
      },
      "pipedream-connect": {
        "enabled": true,
        "config": {
          "backendUrl": "http://localhost:3001"
        }
      }
    }
  },
  "browser": {
    "enabled": true,
    "defaultProfile": "fine",
    "headless": true,
    "profiles": {
      "fine": { "cdpPort": 18800, "color": "#6366f1" }
    }
  }
}
